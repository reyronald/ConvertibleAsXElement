<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard1.4</TargetFramework>
    <Description>Defines a class that can be inherited to expose the AsXElement() method, which returns an XElement representations of all the current class' properties. If the class that inherits it  is also an IEnumerable, it will include the items of the collections aswell.</Description>
    <RootNamespace>AsXElement</RootNamespace>
    <Authors>reyronald</Authors>
    <Company>reyronald</Company>
    <PackageProjectUrl>https://github.com/reyronald/ConvertibleAsXElement</PackageProjectUrl>
    <RepositoryUrl>https://github.com/reyronald/ConvertibleAsXElement</RepositoryUrl>
    <PackageTags>xelement xml serialization convert reflection</PackageTags>
  </PropertyGroup>

</Project>